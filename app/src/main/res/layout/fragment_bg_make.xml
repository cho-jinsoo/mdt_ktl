<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bg.BgMakeFragment">


    <Button
        android:id="@+id/bg_make_bnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_itro"
        android:layout_marginTop="10dp"
        android:text="모임신청"
        />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bg_u_id"
        tools:ignore="MissingConstraints">

    <RadioButton
        android:id="@+id/bigroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동호회"
        android:layout_marginEnd="10dp"
        />

    <RadioButton
        android:id="@+id/smallgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소모임"
        android:layout_marginEnd="10dp" />

    </RadioGroup>

    <EditText
        android:id="@+id/bg_itro"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="동호회 소개"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_name"
        android:layout_marginTop="6dp"
        />

    <EditText
        android:id="@+id/bg_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="동호회이름"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_u_id"
        android:layout_marginTop="6dp"
        />

    <EditText
        android:id="@+id/bg_u_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:hint="신청자아이디"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>