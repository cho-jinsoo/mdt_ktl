<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/abdc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/uid1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/songjoongki"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/ubcmt_u_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/uid1"
            tools:ignore="MissingConstraints">
        </TextView>

        <TextView
            android:id="@+id/ubcmt_b_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contents"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/uid1"
            app:layout_constraintTop_toBottomOf="@+id/ubcmt_u_id"
            tools:ignore="MissingConstraints">
        </TextView>

        <TextView
            android:id="@+id/ubcmt_b_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/uid1"
            app:layout_constraintTop_toBottomOf="@+id/ubcmt_b_contents"
            tools:ignore="MissingConstraints">
        </TextView>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/abdc1"
        tools:ignore="MissingConstraints">
        <View
            android:id="@+id/ubcmt_line"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            app:background="@drawable/gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>