<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bwtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛동산 글쓰기"
            android:textSize="20dp"
            android:textColor="#605A5A"
            android:textStyle="bold"
            ></TextView>
    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/button_sendac"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="완료"
        android:src="@drawable/frog"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/boardfreetitleac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/gradient"
        android:text=""
        android:hint="주제 혹은 태그를 적어봐요~!"
        app:layout_constraintTop_toBottomOf="@id/bwtoolbar"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/boardwriteline1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/boardfreetitleac"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/viewbfline11"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="@drawable/gradient"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/boardfreecontentac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/gradientwhite"
        android:text=""
        android:hint="맛동산 사용자들과 자유로은 이야기와 질문을 해보세요."
        app:layout_constraintTop_toBottomOf="@id/boardwriteline1"
        tools:ignore="MissingConstraints" />





</androidx.constraintlayout.widget.ConstraintLayout>