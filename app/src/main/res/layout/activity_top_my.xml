<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopMy">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myinfotoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:text="마이페이지"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"></TextView>
    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_settings_24"
        tools:ignore="MissingConstraints"
        android:background="@color/white"></ImageButton>

    <View
        android:id="@+id/topmyview01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@+id/myinfotoolbar"
        />

    <LinearLayout
        android:id="@+id/topmylinear01"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmyview01"
        >
    <ImageView
        android:id="@+id/topmy_profileimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/level_1_squirrel_80x80">
    </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topmylinear02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear01"
        tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/topmyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear01"
        tools:ignore="MissingConstraints"></TextView>
    </LinearLayout>

    <View
        android:id="@+id/topmyview02"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear02"
        />
    <LinearLayout
        android:id="@+id/topmylinear03"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmyview02"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_list_alt_24">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="나의 등산 기록 보기"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topmylinear04"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear03"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_list_alt_24">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="내가 쓴 글 보기"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topmylinear05"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear04"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/freechat">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="내가 쓴 댓글 보기"
            ></TextView>
    </LinearLayout>


    <View
        android:id="@+id/topmyview03"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear05"
        />


    <LinearLayout
        android:id="@+id/topmylinear06"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmyview03"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/freechat">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="공지 사항"
            ></TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/topmylinear07"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear06"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/freechat">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="이벤트"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topmylinear08"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear07"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/freechat">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="자주 묻는 질문"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topmylinear09"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear08"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/freechat">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="모임 만들기"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/topmylinear10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/topmylinear09"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/freechat">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="앱 설정"
            ></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>